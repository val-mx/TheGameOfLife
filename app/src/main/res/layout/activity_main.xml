<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <leko.valmx.thegameoflife.game.GameView
        android:layout_width="match_parent"
        android:id="@+id/game"
        android:layout_height="match_parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nextStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#FFF"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/chevron_right" />

    <TextView
        android:id="@+id/gen_counter"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generation 0"
        android:fontFamily="@font/pixel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/auto_play"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFF"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/nextStep"
        app:layout_constraintEnd_toEndOf="@+id/nextStep"
        app:layout_constraintStart_toStartOf="@+id/nextStep"
        app:srcCompat="@drawable/play" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/auto_play"
        app:layout_constraintEnd_toEndOf="@+id/auto_play"
        app:layout_constraintStart_toStartOf="@+id/auto_play"
        app:srcCompat="@drawable/edit_2" />

</androidx.constraintlayout.widget.ConstraintLayout>